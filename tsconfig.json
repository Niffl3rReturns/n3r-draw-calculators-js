{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "declaration": true,
        "downlevelIteration": true,
        "allowJs": true
    },
    "include": [
        "./test",
        "types/**/*",
        "src/**/*"
    ]
}
